<h2>Highlight Categories</h2>
<form>
    <div id="categories-list">
        <% _.each(categories, function(category, id){%>
        <p id="<%=id%>">
            <button class="btn btn-link">
                <span class="remove circle">-</span>
            </button>
            <input type="text" class="category-text" value="<%=category.text%>" style="background-color: <%=category.backgroundColor%>; color: <%=category.color%>;"/>
        </p>
        <% }) %>
        <p>
            <button class="add-category btn btn-link">
                <span class="add circle">-</span>
                Add Category
            </button>
        </p>
    </div>
    <button class="btn">Save</button>
</form>